FROM manjarolinux/base:latest

RUN pacman -Syu
RUN pacman -Sy --noconfirm --needed base-devel git cmake clang ninja qt5 boost qwt enchant tre
RUN pacman -Sy --noconfirm --needed python-nltk
# RUN pacman -Sy --noconfirm --needed qhttpserver

ARG BRANCH=master
ARG USE_TENSORFLOW="true"
ARG GITHUB_TOKEN
ARG LIMA_DISABLE_FSW_TESTING
ARG LIMA_DISABLE_CPACK_DEBIAN_PACKAGE_SHLIBDEPS
ARG NLTK_PTB_DP_FILE

